/* common/picture/picture.wxss */
.uploadImg{
  display:block;
  width:200rpx;
  height:200rpx;
  line-height:200rpx;
  text-align: center;
  font-size:40px;
  border:thin solid #ddd;
  margin-right:30rpx;
  color:#ddd;
  font-weight: bold;
}
.imgArea{
  display: flex;
  flex-wrap:wrap;
}
.contains{
  display: flex;
  margin: 30rpx 0 30rpx 40rpx;
  flex-wrap:wrap;
}
.imgArea view{
  display: block;
  width:200rpx;
  height:200rpx;
  position: relative;
  margin-right:30rpx;
  border:thin solid #ddd;
  margin-bottom:20rpx;
}
.imgArea image{
  display: block;
  width:200rpx;
  height:200rpx;
}
.deleteImg{
  display: block;
  position: absolute;
  top:-14rpx;
  right:-14rpx;
  background:rgba(0,0,0,0.5);
  z-index:200;
  border-radius: 50%;
  font-size:10px;
  color:#fff;
  width:40rpx;
  height:40rpx;
  text-align: center;
  line-height: 40rpx;
}
.bottomBtn{
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom:0;
  left:0;
  height:148rpx;
  width:100%;
  box-shadow: 1px 0px 3px #ddd;
  background:#fff;
  z-index:10;
}
.buttonFixed{
  width:40%;
  display: block;
  height:80rpx;
  line-height: 88rpx;
  padding:0;
  background:#4680FF;
  text-align: center;
  font-size:14px;
  color:#fff;
  border-radius:5px;
}
.buttonCancel{
  background:#f5f5f5;
  color:#ccc;
}